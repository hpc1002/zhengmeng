<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/default_img" />

    <TextView
        android:id="@+id/name_song"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/img_song"
        android:singleLine="true"
        android:text="歌曲名字" />

    <TextView
        android:id="@+id/song_size"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_song"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/img_song"
        android:singleLine="true"
        android:text="歌曲大小" />

    <TextView
        android:id="@+id/btn_yanchang"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/frame_button_yanchang"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="演唱" />
</RelativeLayout>
