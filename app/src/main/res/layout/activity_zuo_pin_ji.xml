<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
        android:background="@mipmap/rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhuye.zhengmeng.widget.RoundedCornerImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/x165"
            android:layout_height="@dimen/x165"
            android:layout_marginTop="@dimen/y90"
            android:src="@mipmap/touxiang_re" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:text="用户名"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="#394055"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="关注1"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/y48"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="粉丝21"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/y48"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_shangbang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="上榜"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
