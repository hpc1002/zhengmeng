<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y22"
    android:layout_marginLeft="@dimen/x33"
    android:layout_marginRight="@dimen/x40"
    android:layout_marginTop="@dimen/y22"
    android:orientation="vertical">

    <com.zhuye.zhengmeng.widget.RoundedCornerImageView
        android:id="@+id/iv_fans_avatar"
        android:layout_width="@dimen/x95"
        android:layout_height="@dimen/x95" />

    <TextView
        android:id="@+id/tv_fan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="用户名"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_jinbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x23"
        android:drawableLeft="@mipmap/gold"
        android:drawablePadding="@dimen/x9"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="12sp" />
</LinearLayout>
