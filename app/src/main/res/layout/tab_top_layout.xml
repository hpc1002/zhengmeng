<com.zhuye.zhengmeng.widget.SmartTab.SmartTabLayout

    android:id="@+id/viewpagertab"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y105"
    android:background="#FFFFFF"

    app:stl_defaultTabTextColor="@drawable/custom_tab"
    app:stl_distributeEvenly="true"
    app:stl_defaultTabTextHorizontalPadding="15dp"
    app:stl_indicatorColor="@color/colorPrimary"
    app:stl_indicatorCornerRadius="0dp"
    app:stl_indicatorInterpolation="smart"
    app:stl_indicatorThickness="3dp"
    app:stl_defaultTabTextSize="16sp"
    app:stl_dividerColor="@color/window_gray"
    app:stl_dividerThickness="1dp"
    app:stl_overlineColor="@color/window_gray"
    app:stl_underlineColor="#00000000"
    app:stl_defaultTabBackground="@color/bag_gray_transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" />


