<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/x23"
    android:layout_marginRight="@dimen/x23"
    android:layout_marginTop="@dimen/y15">

    <ImageView
        android:id="@+id/iv_bangdan_b"
        android:layout_width="@dimen/x341"
        android:layout_height="@dimen/y257"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_rank_b"
        android:layout_width="@dimen/x72"
        android:layout_height="@dimen/y72"
        android:textSize="14sp"
        android:paddingLeft="@dimen/x5"
        android:textColor="@color/white"
        android:background="@mipmap/home_sanjiao" />
    <TextView
        android:id="@+id/tv_bangdan_name_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@+id/iv_bangdan_b"
        android:textColor="#666666" />

</RelativeLayout>
