<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#221a1d"
    android:orientation="vertical">

    <com.zhuye.zhengmeng.view.MyAppTitle
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#f75153"
        android:paddingTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/player_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/fake_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@mipmap/fake_members" />
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/img_show"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/fake_number"/>
        <fragment
            android:id="@+id/video_view"
            android:name="com.zhuye.zhengmeng.chatRoom.fragment.VideoFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/fake_number"
            tools:layout="@layout/fragment_video" />

        <com.zhuye.zhengmeng.widget.ChatListView
            android:id="@+id/chat_listview"
            android:layout_width="230dp"
            android:layout_height="152dp"
            android:layout_above="@+id/bottom_bar"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll" />
        <fragment
            android:id="@+id/bottom_bar"
            android:name="com.zhuye.zhengmeng.chatRoom.fragment.BottomPanelFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_bottombar" />

        <fragment
            android:id="@+id/paimai_list"
            android:name="com.zhuye.zhengmeng.chatRoom.fragment.PaiMaiFragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fake_number"
            tools:layout="@layout/activity_pai_mai" />
        <com.zhuye.zhengmeng.widget.animation.HeartLayout
            android:id="@+id/heart_layout"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp" />
    </RelativeLayout>

</LinearLayout>
