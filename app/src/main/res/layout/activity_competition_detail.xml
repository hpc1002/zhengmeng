<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.zhengmeng.bangdan.CompetitionDetailActivity">
    <com.zhuye.zhengmeng.view.MyAppTitle
        android:id="@+id/titleBar"
        android:background="#f75153"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="53dp">
    </com.zhuye.zhengmeng.view.MyAppTitle>
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/logo"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="比赛名称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/frame_button"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="查看规则"/>
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="50dp"
    android:background="@color/part_line"/>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_img"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="点歌"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:background="@drawable/frame_button_yanchang"/>
</RelativeLayout>
</LinearLayout>
